  button(class='btn btn-small' data-ng-click='orderBy(\'name\')') Nome
  button(class='btn btn-small' data-ng-click='orderBy(\'category\')') Categoria
ul(class='beer-list')
  li(data-ng-repeat='cerveja in cervejas | orderBy:predicate:reverse')
